@using Vitrine.Online.WebApp.Models.Categoria;
@model CategoriaViewModel

@{
    ViewData["Title"] = "New Category";
}


<div class="container container-ghost">

    <div class="col-lg-12">
        <h4>Register Category</h4>
        <hr />
    </div>


    <form class="form-contato-sugestao mt-3 col-lg-6 catalog-inclui" asp-action="SalvarCategoria" asp-controller="Categoria" method="post" enctype="multipart/form-data">


        <input type="hidden" asp-for="IdCategoria" />

        <div class="form-outline mb-4 ag-field-content catalog-inclui">
            <input asp-for="NomeCategoria" type="text" id="txtDescricao" class="form-control ag-field-input ag-input-color-cinze-full " autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Name Category</label>
        </div>

        <div class="form-outline mb-4 ag-field-content catalog-inclui">
            <input asp-for="Descricao" type="text" id="txtDescricao" class="form-control ag-field-input ag-input-color-cinze-full " autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Description</label>
        </div>



        <div class="mb-5">
            <a><span id="lblQtdAnexos">( 0 )</span>&nbsp; Image added</a>
            <button type="button" class="btn btn-teal ms-3" onclick="onClickCarregarImagens(this)">Upload Image</button>
            <input id="btnCarregarImagens" onchange="onChangeImagens(this)" class="d-none" asp-for="ImagemAnexo" type="file">

        </div>


        <div class="mt-5">
            <button type="submit" class="btn btn-teal ms-4">Publish</button>
            <button type="button" onclick="onGotToBack()" class="btn btn-voltar ms-2">To go back</button>
        </div>

    </form>

</div>