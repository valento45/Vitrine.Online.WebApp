@model ServicosViewModel
@{
    Layout = "_Layout";
}

<div class=" container container-ghost mt-5">

    <h4>New service</h4>
    <hr />

    <form class="form-contato-sugestao mt-3 col-lg-6 catalog-inclui" asp-action="SalvarTrabalho" asp-controller="Services" method="post" enctype="multipart/form-data">

      
        <input  type="hidden" asp-for="Id_Servico"/>       



        <div class="form-outline mb-4 ag-field-content catalog-inclui">
            <input asp-for="Descricao" type="text" id="txtDescricao" class="form-control ag-field-input ag-input-color-cinze-full " autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2" >Description</label>
        </div>

        <div class="form-outline mb-4 ag-field-content col-lg-6">
            <input asp-for="DataHora" type="date" id="txtData" class="form-control ag-field-input ag-input-color-cinze-full " autocomplete="off" />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Date</label>
        </div>

        <div class="form-outline mb-4 ag-field-content">
            <input asp-for="Local" type="text" id="txtLocal" class="form-control ag-field-input ag-input-color-cinze-full catalog-inclui" autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Address</label>
        </div>



        <div class="mb-5">
            <a><span id="lblQtdAnexos">( 0 )</span>&nbsp; Anexos adicionados</a>
            <button type="button" class="btn btn-teal ms-3" onclick="onClickCarregarImagens(this)">Upload Attachment's</button>
            <input id="btnCarregarImagens" onchange="onChangeImagens(this)" class="d-none" asp-for="Anexos" type="file" multiple>

        </div>

        <div class="form-outline mb-4 ag-field-content">

            <textarea id="txtResumo" asp-for="Resumo" class="form-control ag-field-input ag-input-color-cinze-full catalog-inclui" autocomplete="off" required style="height: 200px;">

            </textarea>
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Summary</label>
        </div>


        <div class="mt-5"  >
            <button type="submit" class="btn btn-teal ms-4">Publish</button>
            <button type="button" class="btn btn-voltar ms-2">To go back</button>
        </div>

    </form>
</div>
