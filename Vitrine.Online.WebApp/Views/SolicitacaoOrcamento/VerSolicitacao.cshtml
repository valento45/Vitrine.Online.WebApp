@using Vitrine.Online.Core.Models.SolicitacaoOrcamento;
@model SolicitacaoOrcamento


@{

    ViewData["Title"] = "Solicitacao Orcamento";
}

<div class="mt-5 mb-5 container container-ghost">

    <div class="col-lg-12 d-inline-flex">
        <h4 class="col-lg-10">Request Details</h4>
    </div>
    <hr />


    <div class="mt-5 col-lg-12 d-sm-inline-flex">

        <!--Slides imagens-->
        <div class="col-lg-6">
            <div class="slideshow-container">

                @if (Model.Imagens?.Any() ?? false)
                {
                    @foreach (var img in Model.Imagens)
                    {
                        var imgBase64 = img.Anexo_Base64;

                        <div class="mySlides">
                            <img src="data:image/png;base64,@imgBase64" style="width:100%; border-radius: 50px; height: 500px !important;">
                        </div>
                    }
                }
                else
                {
                    <div class="text-center" style="height: 500px; display: flex;  align-items: center;place-content: center;">
                        <h4 class="">There are no images to display</h4>
                    </div>
                }
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
        </div>

        <div class="col-lg-6 container-ghost pnl-descricao-trabalho">

            <p><b>Name:</b></p>
            <p style="word-wrap: break-word;">@Model.NomeSolicitacao</p>

            <p><b>Description:</b></p>
            <h4 class="mb-5 mt-2">@Model.DescricaoSolicitacao</h4>

            <p><b>cell phone:</b></p>
            <p style="word-wrap: break-word;">@Model.CelularSolicitacao</p>

            <p><b>Email:</b></p>
            <p style="word-wrap: break-word;">@Model.EmailSolicitacao</p>

            <p><b>Address:</b></p>
            <p>@Model.EnderecoSolicitacao</p>

            <p><b>Request Date:</b></p>
            <p>@Model.DataSolicitacao.ToString("dd/MM/yyyy")</p>
        </div>

    </div>




</div>